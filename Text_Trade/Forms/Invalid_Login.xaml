<Window x:Class="Text_Trade.Forms.Invalid_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Trade.Forms"
        mc:Ignorable="d"
        Title="Invalid Login" Height="240" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="../Pictures/Text_Trade_background_big3.jpg" />
    </Window.Background>
    <Grid>
        <Label x:Name="label" Content="Invalid Login" HorizontalAlignment="Left" Margin="88,32,0,0" VerticalAlignment="Top" Width="129" FontSize="16" FontFamily="Stencil"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="21,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="70" Width="261" FontSize="14"><Run Text="Your login information did not match our records. "/><LineBreak/><Run Text="Please try again or create a new account."/></TextBlock>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="112,152,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click"/>

    </Grid>
</Window>
